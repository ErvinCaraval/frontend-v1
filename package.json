{
  "name": "multiplayer-quiz-game",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start:frontend": "npm --prefix frontend start",
    "start:backend": "npm --prefix backend start",
    "dev:backend": "npm --prefix backend run dev",
    "start:mock": "npm --prefix backend run mock",
    "start:hybrid": "npm --prefix backend run hybrid",
    "dev:mock": "npm --prefix backend run mock-dev",
    "dev:hybrid": "npm --prefix backend run hybrid-dev",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\""
  }
}
